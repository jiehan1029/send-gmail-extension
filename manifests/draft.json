{
  "name": "Send Alert",
  "description": "send alert before send gmail",
  "version": "1.0",
  "author": "jiehan1029@gmail.com",
  "manifest_version": 2,
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "page_action": {
  	"default_title": "Send Alert",
    "default_popup": "popup.html",
    "default_icon": {
    	"16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png",
      "128": "icon128.png"
  	}
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://mail.google.com/*"],
    "css": ["app.css", "content.css"],
    "js": [
      "browser-polyfill.js",
      "content.js"
    ]
  }]
}